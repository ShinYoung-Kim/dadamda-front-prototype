{
	"compilerOptions": {
		"composite": true,
		"skipLibCheck": true,
		"module": "ESNext",
		"moduleResolution": "bundler",
		"allowSyntheticDefaultImports": true,
		"plugins": [{ "name": "next" }],
		"esModuleInterop": true,
		"jsx": "preserve",
		"allowJs": true,
		"incremental": true
	},
	"include": [
		"vite.config.ts",
		"./next-env.d.ts",
		"./dist/types/**/*.ts"
	],
	"exclude": ["node_modules"]
}
